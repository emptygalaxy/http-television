{
  "name": "http-television",
  "version": "0.0.9",
  "description": "Controlling a TV using http requests",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "ts-node src/test.ts",
    "mock": "ts-node src/mock/server.ts",
    "lint": "eslint src/**.ts",
    "fix": "eslint --fix src/**.ts",
    "watch": "npm run build && npm link && nodemon",
    "watch-fix": "nodemon src/**.ts --exec \"npm run fix\"",
    "clean": "rimraf ./dist",
    "build": "npm run clean && tsc",
    "prepublishOnly": "npm run lint && npm audit && npm run build"
  },
  "keywords": [
    "television",
    "http",
    "api"
  ],
  "author": "Nick Timman",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/express": "^4.17.14",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.8.5",
    "@types/node-fetch": "^2.6.2",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "chai": "^4.3.6",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "mocha": "^10.1.0",
    "mock-http-server": "^1.4.5",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.1.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emptygalaxy/http-television.git"
  },
  "bugs": {
    "url": "https://github.com/emptygalaxy/http-television/issues"
  },
  "homepage": "https://github.com/emptygalaxy/http-television#readme",
  "dependencies": {
    "body-parser": "^1.20.1",
    "express": "^4.18.2",
    "helmet": "^6.0.0",
    "node-fetch": "^2.6.8"
  }
}
